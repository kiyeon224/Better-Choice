<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity03"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/ic_back_afafaf_24dp"
        android:layout_margin="@dimen/activity_padding" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="@dimen/add_text_size"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/activity_padding"
        android:layout_below="@id/btn_back"
        />

    <Spinner
        android:id="@+id/attribute_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_height"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_below="@id/textview1"
        />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_height"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_toRightOf="@id/attribute_spinner1"
        android:layout_below="@id/textview1"
        />

    <Spinner
        android:id="@+id/attribute_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_height"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_below="@id/attribute_spinner1"
        />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_height"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_toRightOf="@id/attribute_spinner2"
        android:layout_below="@id/attribute_spinner1"
        />

    <Spinner
        android:id="@+id/attribute_spinner3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/add_height"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_below="@id/attribute_spinner2"
        />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_height"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_toRightOf="@id/attribute_spinner3"
        android:layout_below="@id/attribute_spinner2"
        />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/edit3"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:padding="@dimen/add_ic_margin"
        android:text="다음"
        android:textColor="@color/colorWhite"
        android:textSize="11pt"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>